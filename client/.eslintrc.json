{
  "env": {
    "browser": true,
    "es2021": true
  },
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:react-redux/recommended",
    "typescript",
    "prettier"
  ],
  "plugins": [
    "prettier",
    "react-redux"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "arrowParens": "avoid",
        "useTabs": true,
        "singleQuote": true,
        "tabWidth": 2,
        "jsxSingleQuote": true,
        "trailingComma": "none",
        "semi": false,
        "endOfLine": "auto",
        "bracketSpacing": true,
        "bracketSameLine": true,
        "proseWrap": "never",
        "printWidth": 150
      }
    ],
    "react/prop-types": 0,
    "react/display-name": 0,
    "no-console": "warn",
    "complexity": "error",
    "max-len": [
      "warn",
      150,
      2
    ]
  }
}