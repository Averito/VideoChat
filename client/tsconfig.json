{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "baseUrl": "./src",
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@app/*": [
        "app/*"
      ],
      "@shared/*": [
        "shared/*"
      ],
      "@processes/*": [
        "processes/*"
      ],
      "@pages/*": [
        "pages/*"
      ],
      "@widgets/*": [
        "widgets/*"
      ],
      "@ui/*": [
        "shared/ui/*"
      ],
      "@hooks/*": [
        "shared/hooks/*"
      ],
      "@utils/*": [
        "shared/utils/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
